# === blacklist apps ===
# .blacklist []

# === App launch commands ===
# cmd - return : open -n -a "wezterm.app"
# cmd + shift - e : open -n -a "PathOfExileClient"
# cmd + shift - return : Killall "Path Finder" | open -n -a "Path Finder"
cmd + shift - return : open -n ~

# # # # # # YABAI CONFIG # # # # # #
# === window focus ===
cmd - h : yabai -m window --focus west
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east
cmd - j : yabai -m window --focus south

# === move windows in current space ===
ctrl + cmd - j : yabai -m window --swap south
ctrl + cmd - k : yabai -m window --swap north
ctrl + cmd - h : yabai -m window --swap west
ctrl + cmd - l : yabai -m window --swap east

# === move window to other space ===
ctrl + cmd - 1 :  yabai -m window --space 1
ctrl + cmd - 2 :  yabai -m window --space 2
ctrl + cmd - 3 :  yabai -m window --space 3
ctrl + cmd - 4 :  yabai -m window --space 4
ctrl + cmd - 5 :  yabai -m window --space 5
ctrl + cmd - 6 :  yabai -m window --space 6
ctrl + cmd - 7 :  yabai -m window --space 7
ctrl + cmd - 8 :  yabai -m window --space 8
ctrl + cmd - 9 :  yabai -m window --space 9
ctrl + cmd - 0 :  yabai -m window --space 10

# === move window to other space and focus ===
ctrl + alt + cmd - 1 :  yabai -m window --space 1 --focus
ctrl + alt + cmd - 2 :  yabai -m window --space 2 --focus
ctrl + alt + cmd - 3 :  yabai -m window --space 3 --focus
ctrl + alt + cmd - 4 :  yabai -m window --space 4 --focus
ctrl + alt + cmd - 5 :  yabai -m window --space 5 --focus
ctrl + alt + cmd - 6 :  yabai -m window --space 6 --focus
ctrl + alt + cmd - 7 :  yabai -m window --space 7 --focus
ctrl + alt + cmd - 8 :  yabai -m window --space 8 --focus
ctrl + alt + cmd - 9 :  yabai -m window --space 9 --focus
ctrl + alt + cmd - 0 :  yabai -m window --space 10 --focus

# Toggle focused window fullscreen
ctrl + cmd - f : yabai -m window --toggle zoom-fullscreen

# Toggle window to be floating in bsp spc
ctrl + alt + cmd - f : yabai -m window --toggle float

# hot restart yabai and skhd
ctrl + alt + cmd - r : yabai --restart-service && skhd --reload
